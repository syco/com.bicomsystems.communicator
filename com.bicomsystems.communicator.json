{
  "id": "com.bicomsystems.communicator",
  "command": "/app/start.sh",
  "separate-locales": false,
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15-21.08",
  "sdk": "org.kde.Sdk",
  "base": "io.qt.qtwebkit.BaseApp",
  "base-version": "5.15-21.08",
  "finish-args": [
    "--device=all",
    "--filesystem=home",
    "--share=ipc",
    "--share=network",
    "--socket=pulseaudio",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.gtk.Notifications",
    "--talk-name=org.kde.StatusNotifierWatcher"
  ],
  "modules": [
    {
      "name": "communicator",
      "modules": [
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://downloads.bicomsystems.com/desktop/glocom/public/6.4.3/communicator/Communicator-6.4.3.deb",
          "dest-filename": "Communicator.deb",
          "sha256": "282cb6db028005f6d638d3afcf1c8563f9c911873bb35cf1b3c8b3fa6ef97b2d"
        },
        {
          "type": "file",
          "path": "com.bicomsystems.communicator.desktop"
        },
        {
          "type": "file",
          "path": "com.bicomsystems.communicator.png"
        },
        {
          "type": "file",
          "path": "com.bicomsystems.communicator.metainfo.xml"
        },
        {
          "type": "file",
          "path": "start.sh"
        }
      ],
      "buildsystem": "simple",
      "build-commands": [
        "ar x Communicator.deb",
        "tar xf data.tar.xz -C /app",
        "rm -Rf Communicator.deb control.tar.gz data.tar.xz debian-binary",
        "chmod -R 755 /app/opt/Communicator",
        "sed -i 's;/opt;/app/opt;g' /app/opt/Communicator/bin/communicator",
        "sed -i 's;/opt;/app/opt;g' /app/opt/Communicator/bin/qt.conf",
        "mv start.sh /app/start.sh",
        "chmod +x /app/start.sh"
      ],
      "post-install": [
        "install -Dm644 com.bicomsystems.communicator.desktop /app/share/applications/com.bicomsystems.communicator.desktop",
        "install -Dm644 com.bicomsystems.communicator.desktop /app/usr/share/applications/com.bicomsystems.communicator.desktop",
        "install -Dm644 com.bicomsystems.communicator.png /app/share/icons/com.bicomsystems.communicator.png",
        "install -Dm644 com.bicomsystems.communicator.png /app/usr/share/icons/com.bicomsystems.communicator.png",
        "install -Dm644 com.bicomsystems.communicator.metainfo.xml /app/share/metainfo/com.bicomsystems.communicator.metainfo.xml",
        "install -Dm644 com.bicomsystems.communicator.metainfo.xml /app/usr/share/metainfo/com.bicomsystems.communicator.metainfo.xml"
      ]
    }
  ]
}
