{
  "id": "com.bicomsystems.communicator",
  "command": "/app/start.sh",
  "separate-locales": false,
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15-22.08",
  "sdk": "org.kde.Sdk",
  "base": "io.qt.qtwebkit.BaseApp",
  "base-version": "5.15-22.08",
  "finish-args": [
    "--device=all",
    "--filesystem=home",
    "--share=ipc",
    "--share=network",
    "--socket=pulseaudio",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.gtk.Notifications",
    "--talk-name=org.kde.StatusNotifierWatcher"
  ],
  "modules": [
    {
      "name": "communicator",
      "modules": [
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://downloads.bicomsystems.com/desktop/glocom/public/6.7.4/communicator/Communicator-6.7.4.deb",
          "dest-filename": "Communicator.deb",
          "sha256": "0723d3c7a57b9d58d202582be6c35c4ba87f24ecfb2b411a885f685af91ae4e3"
        },
        {
          "type": "file",
          "path": "com.bicomsystems.communicator.desktop"
        },
        {
          "type": "file",
          "path": "com.bicomsystems.communicator.png"
        },
        {
          "type": "file",
          "path": "com.bicomsystems.communicator.appdata.xml"
        },
        {
          "type": "file",
          "path": "start.sh"
        }
      ],
      "buildsystem": "simple",
      "build-commands": [
        "ar x Communicator.deb",
        "tar xf data.tar.xz -C /app",
        "rm -Rf Communicator.deb control.tar.gz data.tar.xz debian-binary",
        "chmod -R 755 /app/opt/Communicator",
        "sed -i 's;/opt;/app/opt;g' /app/opt/Communicator/bin/communicator",
        "sed -i 's;/opt;/app/opt;g' /app/opt/Communicator/bin/qt.conf",
        "mv start.sh /app/start.sh",
        "chmod +x /app/start.sh"
      ],
      "post-install": [
        "install -Dm644 ${FLATPAK_ID}.appdata.xml /app/usr/share/appdata/${FLATPAK_ID}.appdata.xml",
        "install -Dm644 ${FLATPAK_ID}.desktop /app/usr/share/applications/${FLATPAK_ID}.desktop",
        "install -Dm644 ${FLATPAK_ID}.png /app/share/icons/hicolor/48x48/apps/${FLATPAK_ID}.png"
      ]
    }
  ]
}
