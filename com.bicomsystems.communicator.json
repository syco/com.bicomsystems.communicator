{
  "id": "com.bicomsystems.communicator",
  "command": "/app/start.sh",
  "separate-locales": false,
  "runtime": "org.kde.Platform",
  "runtime-version": "6.5",
  "sdk": "org.kde.Sdk",
  "base": "io.qt.qtwebengine.BaseApp",
  "base-version": "6.5",
  "finish-args": [
    "--device=all",
    "--filesystem=home",
    "--share=ipc",
    "--share=network",
    "--socket=pulseaudio",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.gtk.Notifications",
    "--talk-name=org.kde.StatusNotifierWatcher"
  ],
  "modules": [
    {
      "name": "communicator",
      "sources": [
        {
          "type": "file",
          "url": "https://downloads.bicomsystems.com/desktop/glocom/public/6.7.6/communicator/Communicator-6.7.6.deb",
          "dest-filename": "Communicator.deb",
          "sha256": "05616ece8d4ddd750ddcf1cdabbe3278119528e14772b9c6dec896d96084b737"
        },
        {
          "type": "file",
          "path": "com.bicomsystems.communicator.desktop"
        },
        {
          "type": "file",
          "path": "com.bicomsystems.communicator.png"
        },
        {
          "type": "file",
          "path": "com.bicomsystems.communicator.metainfo.xml"
        },
        {
          "type": "file",
          "path": "start.sh"
        }
      ],
      "buildsystem": "simple",
      "build-commands": [
        "ar x Communicator.deb",
        "tar xf data.tar.xz -C /app",
        "rm -Rf Communicator.deb control.tar.gz data.tar.xz debian-binary",
        "chmod -R 755 /app/opt/Communicator",
        "sed -i 's;/opt;/app/opt;g' /app/opt/Communicator/bin/communicator",
        "sed -i 's;/opt;/app/opt;g' /app/opt/Communicator/bin/qt.conf",
        "mv start.sh /app/start.sh",
        "chmod +x /app/start.sh"
      ],
      "post-install": [
        "install -Dm644 ${FLATPAK_ID}.metainfo.xml /app/share/metainfo/${FLATPAK_ID}.metainfo.xml",
        "install -Dm644 ${FLATPAK_ID}.desktop /app/share/applications/${FLATPAK_ID}.desktop",
        "install -Dm644 ${FLATPAK_ID}.png /app/share/icons/hicolor/512x512/apps/${FLATPAK_ID}.png",
        "install -Dm644 ${FLATPAK_ID}.png /app/usr/share/icons/${FLATPAK_ID}.png"
      ]
    }
  ]
}
